<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vereflix : Inicio</title>
    <link rel="shortcut icon" href="resources/img/favicon.png" type="image/x-icon">

    <link rel="stylesheet" href="resources/css/style.css">
    

</head>
<body>

    <!-- navbar -->
    <nav class="navbar">
        <a href="/" class="logo"><img src="resources/img/logo.png" class="logo" alt=""></a>
        <div class="join-box">
            <%   if(typeof name != "undefined" && name) { %>
            <p class="join-msg">Bienvenido <%= name %></p>
            <% }    %>
            <button class="btn"><a style="color: white; text-decoration:none" href="">Historial</a></button>
            <button  class="btn"><a style="color: white; text-decoration:none" href="login/logout">Desconectarse</a></button>
        </div>
    </nav>

    <!-- main section -->
    <header class="main">
        
       
    </header>
    <!-- movie list -->
    <script src="resources/js/api.js"></script>
    <script src="resources/js/scroll.js"></script>
    <script src="resources/js/home.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined"){ %>
        <script>
            Swal.fire({
                title:'<%= alertTitle %>',
                text: '<%= AlertMessage %>',
                icon:'<%= alertIcon %>',
                showConfirmButton:'<%= showConfirmButton %>',
                timer: '<%= timer %>'
            }).then(()=>{
                window.location='/<%= ruta %>'
            })
        </script>
        <% } %>
    
</body>
</html>